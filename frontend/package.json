{
  "name": "lightslark-server",
  "version": "1.0.0",
  "license": "GPLv3",
  "scripts": {
    "ng": "ng",
    "watch": "ng serve --target=development --outputPath=../build/resources/main/assets/web --sourcemaps --progress",
